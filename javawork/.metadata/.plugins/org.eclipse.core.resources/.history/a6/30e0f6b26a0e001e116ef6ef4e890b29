package day0619;

import java.util.Scanner;

public class QuizOper_13 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		/*
		 * 이름입력
		 * 박병주
		 * 키 
		 * 177.5
		 * 몸무게
		 * 88
		 * 
		 * **학생 키 정보**
		 * 이름: 박병주
		 * 키: 177.5cm
		 * 몸무게: 88 kg
		 * 
		 * 표준 몸무게: (키-100)*0.9
		 * 권장 표준 몸무게는 69.75kg 입니다
		 * 
		 */
		
		Scanner sc=new Scanner(System.in);
		
		String name,bmi;
		int hei;
		int wei;
		
		System.out.println("이름 입력");
		name=sc.nextLine();
		System.out.println("키");
		hei=Integer.parseInt(sc.nextLine());
		System.out.println("몸무게");
		wei=Integer.parseInt(sc.nextLine());
		
		
		System.out.println("**학생 키 정보**");
		System.out.println("이름: "+name);
		System.out.println("키: "+hei+"cm");
		System.out.println("몸무게: "+wei+"kg");
		System.out.println("표준몸무게: "+((hei-100)*0.9)+"kg");
		
		bmi=(((hei-100)*0.9)>=80)?"비만":
			(((hei-100)*0.9)>=60)?"중간":
				(((hei-100)*0.9)>=10)?"마름":"탈인간";
				
	
		System.out.println("당신은 "+bmi+"입니다");
				
		
		String name;
		double height,weight,st_weight;
		
		//입력
		System.out.println("이름");
		name=sc.nextLine();
		System.out.println("키");
		height=sc.nextDouble();
		System.out.println("몸무게");
		weight=sc.nextDouble();
		
		//계산
		st_weight=(height-100)*0.9;
		
		//출력
		
				
	}

}
