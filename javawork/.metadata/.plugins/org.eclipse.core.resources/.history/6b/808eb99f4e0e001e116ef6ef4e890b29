package day0616;

public class OperTest_06 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// 증감연산자 ++,--
		
		int a,b;
		a=b=5;
		
		// 단항일 경우 연산자를 앞에 붙이나 뒤에 붙이나 똑같다
		++a; // =>원래 a값에서 1 증가하는 것
		b++; // b=b+1로 표현할 수도 있음
		
		System.out.println("a="+a+", b="+b);
		
		
		
	}

}
